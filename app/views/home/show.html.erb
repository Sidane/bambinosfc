<h2>League Table</h2>
<%= LeagueTablePresenter.new(@teams, self).render %>

<h2>Bambinos FC Goalscorers</h2>
<dl>
<% @goalscorers.each do |player| %>
  <dt>
    <%= image_tag(player.image) %> <%= player.number %>. <%= player.full_name %>
  </dt>
  <dd>
    <%= player.goals_scored %> goals
  </dd>
<% end %>
</dl>
